{% extends '::base.html.twig' %}
{% block content %}
{% endblock %}
{% block slider %}
<img width="100%" style="border-radius:4px;" class="hidden-xs" src="{{ asset('slider.png') }}"/>
{% endblock %}
{% block categories %}
{% for categories in categories %}
{% set var = categories.category %}
<li><a href="/sh/web/app_dev.php/category/{{ var|lower }}"><i class="fa fa-angle-double-right"></i> {{ categories.category }}</a></li>
{% endfor %}

{% endblock %}

{% block products %}
<div class="container">
<div class="row">
{% for categories in categories %}
<div class="col-md-3">
<a href="/sh/web/app_dev.php/products/{{ categories.id }}">
{{ categories.name }}

<img src="{{categories.img}}" style="width:150px">
</a></div>
{% endfor %}
</div></div>
{% endblock %}